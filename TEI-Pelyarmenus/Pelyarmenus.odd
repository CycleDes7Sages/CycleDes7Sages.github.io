              <attDef ident="key" mode="change" usage="req">
                <valList type="open"/>
              </attDef>
            </attList>
          </elementSpec>

          <elementSpec ident="placeName" module="namesdates" mode="change">
            <desc>Indication des noms de lieux dans la narration sous cette balise en vue de l'index
              de lieux</desc>
            <attList>
              <attDef ident="key" mode="change" usage="req">
                <valList type="open"/>
              </attDef>
            </attList>
          </elementSpec>

          <elementSpec ident="publicationStmt" module="header" mode="change">
            <content>
              <sequence>
                <elementRef key="authority" minOccurs="2" maxOccurs="5"/>
                <elementRef key="availability" minOccurs="1" maxOccurs="1"/>
              </sequence>
            </content>
          </elementSpec>



          <elementSpec ident="sourceDesc" module="header" mode="change">
            <content>
              <elementRef key="listWit"/>
            </content>
          </elementSpec>

